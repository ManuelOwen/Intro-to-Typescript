{
  "compilerOptions": {   
    "target": "ES2022",                                  
    "module": "commonjs",                             
    "rootDir": "./src",                                
     "moduleResolution": "node10",                                                           
    "outDir": "./dist",                            
    "esModuleInterop": true,                                                 
    "forceConsistentCasingInFileNames": true,              
    "strict": true,                                             
    "skipLibCheck": true                                
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
